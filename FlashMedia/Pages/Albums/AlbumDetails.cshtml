@page "{id:int}"
@model FlashMedia.Pages.Albums.AlbumDetailsModel
@{
    ViewData["Title"] = "Album Details";
}
<h2>@Model.Album.Title</h2>

<a asp-page="/Photos/AddPhoto" asp-route-albumId="@Model.Album.Id" class="btn btn-success mb-4">
    <i class="fa-solid fa-plus"></i> Add Photo
</a>

@if (Model.Album.Photos?.Any() == true)
{
    <div class="mb-3">
        <a asp-page="/Albums/AlbumDetailS" asp-route-id="@Model.Album.Id" class="btn btn-outline-secondary">
            View Album: @Model.Album.Title
        </a>
    </div>
    <div class="d-flex flex-wrap gap-3">
        @foreach (var photo in Model.Album.Photos)
        {
            <a asp-page="/Photos/PhotoDetails" asp-route-id="@photo.Id">
                <img src="@photo.FilePath" alt="@photo.Name" style="width: 200px; height: 270px; object-fit: cover;" class="img-thumbnail" />
            </a>
        }
    </div>
}
else
{
    <p>No photos yet.</p>
}
